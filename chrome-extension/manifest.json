{
  "manifest_version": 2,
  "name": "Crossover",
  "description": "Crossover, the best way to share and manage your tabs across any platform!",
  "version": "0.7",
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["jquery-2.1.3.min.js", "content.js", "popup.js"]
  }
],
"browser_action": {
  "default_icon": "favicon-arrows-alt.png",
  "default_title": "Crossover",
  "default_popup": "popup.html"
 
},
"permissions": [
   "tabs",
   "storage"
],
"background": {
  "scripts": ["background.js", "popup.js"]
}

}

